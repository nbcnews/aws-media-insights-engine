{
  "Parameters": {
    "DataplaneTableName": {
      "Type": "String",
      "Description": "Table used for storing asset metadata"
    },
    "DataplaneBucketName": {
      "Type": "String",
      "Description": "Bucket used to store asset media"
    },
    "LiveStreamBucketName": {
      "Type": "String",
      "Description": "Bucket contains the live stream segments"
    },
    "UserPoolArn": {
      "Type": "String",
      "Description": "Arn of the Mie Cognito user pool"
    },
    "DeploymentPackageBucket": {
      "Type": "String",
      "Description": "Bucket that contains the dataplane deployment package"
    },
    "DeploymentPackageKey": {
      "Type": "String",
      "Description": "S3 Key of the dataplane deployment package"
    }
  },
  "Resources": {
    "ApiHandlerRole": {
      "Properties": {
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ReplicateObject",
                    "s3:PutObject",
                    "s3:GetObject",
                    "s3:RestoreObject",
                    "s3:GetObjectVersionAcl",
                    "s3:ListBucket",
                    "s3:DeleteObject",
                    "s3:HeadBucket",
                    "s3:PutObjectAcl",
                    "s3:GetObjectVersion",
                    "s3:DeleteObjectVersion"
                  ],
                  "Resource": {"Fn::Sub": "arn:aws:s3:::${DataplaneBucketName}/*"}
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ReplicateObject",
                    "s3:GetObject",
                    "s3:RestoreObject",
                    "s3:GetObjectVersionAcl",
                    "s3:ListBucket",
                    "s3:HeadBucket",
                    "s3:GetObjectVersion"
                  ],
                  "Resource": {"Fn::Sub": "arn:aws:s3:::${LiveStreamBucketName}/*"}
                },
                {
                  "Effect": "Allow",
                  "Action": "dynamodb:*",
                  "Resource": {"Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${DataplaneTableName}"}
                },
                {
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "*",
                  "Effect": "Allow",
                  "Sid": "Logging"
                }
              ]
            },
            "PolicyName": "MieDataplaneApiHandlerRolePolicy"
          }
        ]
      }
    },
    "APIHandler": {
      "Properties": {
        "Environment": {
          "Variables": {
            "DATAPLANE_TABLE_NAME": {
                "Ref": "DataplaneTableName"
            },
            "DATAPLANE_BUCKET": {
                "Ref": "DataplaneBucketName"
            },
            "USER_POOL_ARN": {
                "Ref": "UserPoolArn"
            }
          }
        },
        "CodeUri": {"Bucket":  {"Ref": "DeploymentPackageBucket"}, "Key":  {"Ref": "DeploymentPackageKey"}}
      }
    },
    "RestAPI": {
      "Properties": {
        "DefinitionBody": {
          "securityDefinitions": {
            "MieUserPool": {
              "x-amazon-apigateway-authorizer": {
              "providerARNs": [{"Ref":  "UserPoolArn"}]
            }
          }
        }
        }
      }
    }
  }
}